<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="基本使用"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_ChaiFen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bt_ChaiFen"
                android:text="拆分使用" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bt_LianShi"
                android:text="链式调用" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bt_xiaoFeiZhe"
                android:text="更简单的观察者-消费者" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bt_CaoZuoFu"
                android:text="创建操作符" />

            <TextView
                android:layout_width="match_parent"
                android:text="合并作符"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="concatWith"
                android:text="合并操作符-concatWith" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="startWith"
                android:text="合并操作符-startWith" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="concat"
                android:text="合并操作符-concat" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="merge"
                android:text="合并操作符-merge" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="zip"
                android:text="合并操作符-zip" />

            <TextView
                android:layout_width="match_parent"
                android:text="变换作符"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="map"
                android:text="变换操作符-map" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="flatMap2"
                android:text="变换操作符-flatMap2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="group"
                android:text="变换操作符-group" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buffer"
                android:text="变换操作符-buffer" />

            <TextView

                android:layout_width="match_parent"
                android:text="过滤操作符"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="filter"
                android:text="过滤操作符-filter" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="take"
                android:text="过滤操作符-take" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="distinct"
                android:text="过滤操作符-distinct" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="elementAt"
                android:text="过滤操作符-elementAt" />

            <TextView
                android:text="条件操作符"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="all"
                android:text="条件操作符-all" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="contains"
                android:text="条件操作符-contains" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="any"
                android:text="条件操作符-any" />

            <TextView
                android:text="异常操作符"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onError"
                android:text="异常操作符-onError" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onErrorReturn"
                android:text="异常操作符-onErrorReturn" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onErrorResumeNext"
                android:text="异常操作符-onErrorResumeNext" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onExceptionResumeNext"
                android:text="异常操作符-onExceptionResumeNext" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="retry"
                android:text="异常操作符-retry" />

            <TextView
                android:text="线程切换"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="schedulers"
                android:text="线程切换-默认" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="schedulersSwitch"
                android:text="线程切换-schedulersSwitch" />

            <TextView
                android:text="背压模式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="backpressure"
                android:text="背压模式-基本使用" />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="backpressure1"
            android:text="背压模式-Flowable" />

            <TextView
                android:text="例子"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="testImage"
                android:text="一个展示网络图片的例子" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>